{% extends 'todobase.html.twig' %}

{% block body %}
<h1 class="mb-4 text-center">Edit Task</h1>

<div class="d-flex justify-content-center">
    <div class="card shadow-sm p-4 mb-5 bg-white rounded border-0" style="max-width: 600px; width: 100%;">
        <form action="{{ path('update_task') }}" method="post">
            <input type="hidden" name="taskId" value="{{ task.id }}">
            <input type="hidden" name="referer" value="{{ referer }}">

            <div class="form-floating mb-4">
                <input type="text" class="form-control border-0 bg-light text-dark" id="taskName" name="taskName" placeholder="Task Name" value="{{ task.name }}" required>
                <label for="taskName" class="text-dark">Task Name</label>
            </div>

            <div class="form-floating mb-4">
                <textarea class="form-control border-0 bg-light text-dark" id="taskDescription" name="taskDescription" placeholder="Task Description" rows="3">{{ task.description }}</textarea>
                <label for="taskDescription" class="text-dark">Task Description</label>
            </div>

            <div class="form-floating mb-4">
                <input type="date" class="form-control border-0 bg-light text-dark" id="taskDate" name="taskDate" value="{{ task.date|date('Y-m-d') }}">
                <label for="taskDate" class="text-dark">Due Date</label>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-lg" style="background-color: #dc3545; color: white;">Save Changes</button>
            </div>
        </form>

        <a href="{{ path('todo-page') }}" class="btn btn-secondary mt-4 text-center" style="background-color: #f8f9fa; color: #dc3545; border-color: #dc3545;">Back to Task List</a>
    </div>
</div>
{% endblock %}